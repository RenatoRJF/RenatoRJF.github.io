{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "types": ["react", "jest"],
    "resolveJsonModule": true,
  },
  "include": [
    "./src/**/*",
    "custom.d.ts"
  ]
}